@model Project2MVCApp.Models.Models.Category
@{
    ViewBag.Title = "Update Category"; 
    Layout = "~/Views/Shared/_MyTheme.cshtml";
}

<div class="row" style="margin:3px;">
    <div class="row">
        <h1 style="font-family:'Times New Roman', Times, serif;
                       color:darkgreen;
                       width:100%;
                       background-color:cadetblue;
                       text-align:center">
            Update Category
        </h1>
    </div>
    <div style="background-color:lightyellow">
        <div class="row" style="margin:5px; padding:25px">

            <div class="col-lg-3"></div>
            <div class="col-md-6">
                @{
                    if (ViewBag.SuccessMsg != null)
                    {
                        <h5 style="color:green">@ViewBag.SuccessMsg</h5>

                    }
                    if (ViewBag.FailMsg != null)
                    {
                        <h5 style="color:red">@ViewBag.FailMsg</h5>
                    }
                }
                <form method="post">

                    <div class="row">
                        <div class="col-md-2"><h5>Code</h5></div>
                        <div class="col-md-6"><input type="text" name="Code" value="@Model.Code" /></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"><h5>Name</h5></div>
                        <div class="col-md-6"><input type="text" name="Name" value="@Model.Name" /></div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"><h5>Action</h5></div>
                        <div class="col-md-6"><input type="submit" name="Update" value="Update" /></div>
                    </div>
                </form>



            </div>
        </div>
        </div>
</div>

        
    